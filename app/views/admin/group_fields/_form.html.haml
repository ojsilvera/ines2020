-# frozen_string_literal: true
= simple_form_for [:admin, @group_field] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :detail
    = f.association :group, :label_method => lambda { |group| "#{group.id} | #{group.name}" }
    = f.association :field, :label_method => lambda { |field| "#{field.id} | #{field.name}" }
    = f.association :poll_header, :label_method => lambda { |poll_header| "#{poll_header.id}" }

  .form-actions
    = f.button :submit
