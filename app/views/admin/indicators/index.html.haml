%h1 Listing indicators

%table
  %thead
    %tr
      %th Description
      %th Factor
      %th
      %th
      %th

  %tbody
    - @indicators.each do |indicator|
      %tr
        %td= indicator.description
        %td= indicator.factor.name
        %td= link_to 'Show', admin_indicator_path(indicator)
        %td= link_to 'Edit', edit_admin_indicator_path(indicator)
        %td= link_to 'Destroy', admin_indicator_path(indicator), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Indicator', new_admin_indicator_path
