-# frozen_string_literal: true
= simple_form_for(@group_field) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :detail
    = f.association :group
    = f.association :field
    = f.association :poll_header

  .form-actions
    = f.button :submit
