<p id="notice"><%= notice %></p>

<h1>Poll Bodies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poll_bodies.each do |poll_body| %>
      <tr>
        <td><%= link_to 'Show', poll_body %></td>
        <td><%= link_to 'Edit', edit_poll_body_path(poll_body) %></td>
        <td><%= link_to 'Destroy', poll_body, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

