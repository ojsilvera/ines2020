<p id="notice"><%= notice %></p>

<h1>Poll Headers</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poll_headers.each do |poll_header| %>
      <tr>
        <td><%= poll_header.age %></td>
        <td><%= poll_header.date %></td>
        <td><%= link_to 'Show', poll_header %></td>
        <td><%= link_to 'Edit', edit_poll_header_path(poll_header) %></td>
        <td><%= link_to 'Destroy', poll_header, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

